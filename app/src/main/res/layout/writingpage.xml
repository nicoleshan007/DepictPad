<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpic"
    >

    <LinearLayout
        android:id="@+id/head_layout_write"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ff9c00"

        >
        <Button
            android:id="@+id/btnback2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvhead"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="书写"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />
        <Button
            android:id="@+id/btnsettings1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/set"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ffffff"
        />
    <LinearLayout
        android:id="@+id/gdfirstview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <GridView
            android:id="@+id/gvfirstview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="0pt"
            android:verticalSpacing="0pt"
            android:numColumns="6"
            android:gravity="center"
            android:background="@drawable/radius"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ffffff"
        />
    <LinearLayout
        android:id="@+id/llsavedecide"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:id="@+id/bsavesingleword"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="单字保存"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/radius"
            android:layout_marginLeft="15dp"

            >
        </Button>
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/undogrid"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="撤销文字"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/radius"
            >
        </Button>
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/btnsavedecide"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:text="表图保存"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/radius">
        </Button>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ffffff"
        />
    <LinearLayout
        android:id="@+id/llwriteboard"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/radius1"
        >
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ffffff"
        />
    <LinearLayout
        android:id="@+id/llbotton"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btnconfirm1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="确认"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/radius">
        </Button>
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/btnoverride"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="重写"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/radius"
            >
        </Button>
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/btnundo"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:text="撤销"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/radius">
        </Button>
    </LinearLayout>


</LinearLayout>